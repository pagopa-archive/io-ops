{
  "compilerOptions": {
    "importHelpers": true,
    "module": "commonjs",
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "target": "es2017",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "exclude": [
    "__mocks__",
    "dist",
    "node_modules",
    "**/__tests__/*",
    "Dangerfile.ts"
  ],
  "include": ["src/**/*"]
}
